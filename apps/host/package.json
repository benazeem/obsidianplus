{
  "name": "@obsidianplus/host",
  "version": "1.0.0",
  "author": {
    "name": "Mohammad Anwar",
    "email": "azeemkhandsari@gmail.com"
  },
  "description": "Native host for Chrome extension to manage Obsidian vaults",
  "main": "dist/electron.js",
  "build": {
    "compression": "maximum",
    "appId": "com.obsidianplus.host",
    "productName": "obsidianplushost",
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "files": [
      "!**/node_modules/*/{test,__tests__,tests}/**",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/example{,s}/**",
      "!**/node_modules/**/*.d.ts",
      "dist/**/*",
      "electron.js",
      "!src/**/*",
      "!tests/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.scss",
      "!**/*.md",
      "!**/__tests__/**/*"
    ],
    "extraMetadata": {
      "main": "dist/electron.js",
      "version": "1.0.0",
      "author": {
        "name": "Mohammad Azeem Malik",
        "email": "azeemkhandsari@gmail.com"
      }
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist/releases"
    },
    "mac": {
      "target": "zip",
      "category": "public.app-category.productivity",
      "icon": "./src/assets/icons/icon.icns"
    },
    "win": {
      "target": "zip",
      "icon": "./src/assets/icons/icon.ico"
    },
    "linux": {
      "target": "zip",
      "category": "Utility",
      "icon": "./src/assets/icons/icon.png"
    },
    "artifactName": "obsidian-plus-${platform}-${arch}-${version}.${ext}"
  },
  "scripts": {
    "compile": "tsc",
    "esbuild": "pnpm compile && node scripts/esbuild.mjs",
    "dev": "tsc --watch",
    "start-electron": "electron .",
    "dist": "electron-builder --dir",
    "build:win:x64": " electron-builder --win --x64",
    "build:win:ia32": "  electron-builder --win --ia32",
    "build:linux:x64": " electron-builder --linux --x64",
    "build:linux:arm64": " electron-builder --linux --arm64",
    "build:mac:x64": " electron-builder --mac --x64",
    "build:mac:arm64": "  electron-builder --mac --arm64",
    "build": "pnpm run pre-build && pnpm run build:win:x64 && pnpm run build:win:ia32 && pnpm run build:linux:x64 && pnpm run build:linux:arm64 && pnpm run build:mac:x64 && pnpm run build:mac:arm64",
    "debug-tsc": "tsc --traceResolution --listFiles --listEmittedFiles"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@obsidianplus/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "typescript": "^5.3.0"
  }
}
